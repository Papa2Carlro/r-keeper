                    </div>

                    <!-- RANDOM BET -->
                    {{ components.cardBet() }}
                  </div>
                  <div class="col-18 col-lg-7 d-none d-lg-block">
                    {{ components.banner({label: 'Bet on Football. Easily.', image: 'static/img/stub/banner-square.jpg'}) }}
                  </div>
                </div>
              </div>
              <footer class="article-prediction__footer">
                <div class="row">
                  <div class="col-18 col-lg-10">
                    <div class="article-prediction__footnote">
                      <div class="article-prediction__footnote-item">
                        <div class="article-prediction__source">
                          source: <a href="#" class="link" target="_blank">ESPN</a>
                        </div>
                      </div>
                      <div class="article-prediction__footnote-item">
                        <div class="article-prediction__tags">
                          {% for tag in postTags %}
                            <a href="{{ tag.path }}" class="link article-prediction__tags-link" title="{{ tag.label }}">
                              {{ tag.label }}
                            </a>
                          {% endfor %}
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-18 col-lg-8 d-none d-md-block">
                    {{ components.shareList(shareList, 'article-prediction__share', {label: 'Share', parentClass: 'article-prediction__share-label'}) }}
