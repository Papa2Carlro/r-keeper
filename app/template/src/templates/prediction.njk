                </div>
              </footer>
            </article>

            <!-- TODO: RELATED SPORTS PREDICTIONS -->
            {% include "includes/article/_top-predictions.njk" %}

            <!-- COMMENTS -->
            {% include "includes/article/_comments.njk" %}
          </div>

          <!-- ASIDE -->
          <div class="col-18 col-lg-4 d-none d-lg-block">
            {% include "includes/aside/_category-list.njk" %}
          </div>
        </div>
      </div>
    </div>

  </main>

{% endblock %}