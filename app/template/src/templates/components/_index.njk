{% macro preLeaders(data = {}) %}
  <div class="preLeaders">
    <div class="widget">
      <div class="widget widget--dark widget--shadow widget--shadow-lg widget--clip preLeaders__widget">
        <div class="widget__content preLeaders__widget-content">
          <div class="widget__header preLeaders__widget-header">
            <h2 class="preLeaders__title">
              Tipster competition
            </h2>
            <div class="preLeaders__logo">
              <svg class="icon icon-zipper">
                <use xlink:href="#icon-zipper"></use>
              </svg>
            </div>
          </div>
          <div class="widget__body">
            <ol class="list-unstyled preLeaders__list">
              {% for user in data.users %}
                <li class="preLeaders__item">
                  <div class="preLeaders__item-count"></div>
                  <div class="preLeaders__item-info">
                    <a href="#" class="preLeaders__user link link--white"
                       title="{{ user.name }}">
                      <div class="preLeaders__user-avatar">
                        <div class="avatar avatar--xs">
                          {% if user.image %}
                            <img src="{{ user.image }}" loading="lazy" class="fit" alt="{{ user.name }}">
                          {% else %}
                            <img src="/static/img/stub/no-avatar.jpg" loading="lazy" class="fit" alt="{{ user.name }}">
                          {% endif %}
                        </div>
                      </div>
                      <div class="preLeaders__user-name">
                        {{ user.name }}
                      </div>
                    </a>
                  </div>
                  <div class="preLeaders__item-stat">
                    <div class="preLeaders__rate">
                                                                <span class="preLeaders__rate-progress">
                                                                    {{ user.rate }}
                                                                </span>
                      <span class="preLeaders__rate-flag">PTS</span>
                    </div>
                    <div class="preLeaders__bonus">
                      {{ user.bonus }}
                    </div>
                  </div>
                </li>
              {% endfor %}
            </ol>
          </div>
        </div>
        <div class="widget__bg"></div>
      </div>
    </div>
  </div>
{% endmacro %}

{% macro breadcrumbs(data = [{label: 'Main', route: '/'}, {label: 'Soccer', route: ''}, {label: 'News', route: ''}, {label: 'New twist in Thiago to Liverpool; Chelsea look to land rising Monaco star', route: ''}]) %}
  <nav>
    <ol class="breadcrumbs">
      {% for item in data %}
        {% if loop.last %}
          <li class="breadcrumbs__item breadcrumbs__item--active">{{ item.label }}</li>
        {% else %}
          <li class="breadcrumbs__item"><a href="{{ item.route }}" class="link" title="">{{ item.label }}</a></li>
        {% endif %}
      {% endfor %}
    </ol>
  </nav>
{% endmacro %}