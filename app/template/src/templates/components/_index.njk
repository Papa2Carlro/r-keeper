{% macro casinoBar(data = {}, parentClass = '') %}
  <a href="#" class="casino-bar link {{ parentClass }}" title="{{ data.label }}">
    <span role="img" class="casino-bar__icon" style="background-image: url('{{ data.image }}');"></span>
    <span class="casino-bar__label">
      {{ data.label }}
      <span class="badge badge--top">
        <span class="badge__icon">
          <svg class="icon icon-star text-yellow">
          <use xlink:href="#icon-star"></use>
          </svg>
        </span>
        <span class="badge__label">
           {{ data.rate }}
        </span>
      </span>
    </span>
  </a>
{% endmacro %}

