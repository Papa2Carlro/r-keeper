{% macro shareList(shareList = [], parentClass = '', shareLabel = {}) %}
  <div class="share {{ parentClass }}">
    {% if shareLabel.label %}
      <div class="share__label {{ shareLabel.parentClass }}">
        {{ shareLabel.label }}
      </div>
    {% endif %}
    <ul class="share__list">
      {% for social in shareList %}
        <li class="share__item">
          <a href="{{ social.path }}" class="link share__link" title="{{ social.label }}">
            <span class="share__icon">
              <svg class="icon icon-{{ social.icon }}">
                <use xlink:href="#icon-{{ social.icon }}"></use>
              </svg>
            </span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endmacro %}

